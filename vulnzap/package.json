{
  "name": "vulnzap",
  "version": "1.0.0",
  "description": "Secure AI-generated code by intercepting vulnerabilities in real-time",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "vulnzap": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build",
    "db:seed": "ts-node-dev src/scripts/seed-db.ts",
    "postinstall": "node -e \"try { require('fs').accessSync('./dist', require('fs').constants.F_OK) || require('child_process').execSync('npm run build'); } catch (e) { require('child_process').execSync('npm run build'); }\"",
    "webhook:dev": "stripe listen --forward-to localhost:3456/api/webhook",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulnzap/vulnzap.git"
  },
  "keywords": [
    "security",
    "vulnerability",
    "ai",
    "ai-code",
    "code-security",
    "mcp",
    "model-context-protocol",
    "cursor",
    "claude-code",
    "dependency-scanning"
  ],
  "author": "VulnZap Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vulnzap/vulnzap/issues"
  },
  "homepage": "https://github.com/vulnzap/vulnzap#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.49.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^11.0.2",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "qrcode-terminal": "^0.12.0",
    "semver": "^7.5.4",
    "stripe": "^14.5.0",
    "uuid": "^9.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/semver": "^7.5.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/scripts/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
