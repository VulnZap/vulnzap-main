{
  "name": "vulnzap",
  "version": "1.0.3",
  "description": "Secure AI-generated code by intercepting vulnerabilities in real-time",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "bin": {
    "vulnzap": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx --watch src/cli.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build",
    "webhook:dev": "stripe listen --forward-to localhost:3456/api/webhook",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulnzap/vulnzap.git"
  },
  "keywords": [
    "security",
    "vulnerability",
    "ai",
    "ai-code",
    "code-security",
    "mcp",
    "model-context-protocol",
    "cursor",
    "claude-code",
    "dependency-scanning"
  ],
  "author": "PlawLabs Ltd",
  "license": "BUSL-1.1",
  "bugs": {
    "url": "https://github.com/vulnzap/vulnzap/issues"
  },
  "homepage": "https://github.com/vulnzap/vulnzap#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/blessed": "^0.1.25",
    "@xmldom/xmldom": "^0.9.8",
    "axios": "^1.9.0",
    "blessed": "^0.1.81",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "conf": "^11.0.2",
    "dotenv": "^16.5.0",
    "inquirer": "^9.3.7",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "qrcode-terminal": "^0.12.0",
    "semver": "^7.7.2",
    "string-width": "^5.1.2",
    "uuid": "^9.0.1",
    "xpath": "^0.0.34",
    "zod": "^3.25.36"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.52",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nock": "^14.0.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/scripts/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "directories": {
    "test": "tests"
  }
}
