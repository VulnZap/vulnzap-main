# Vulnzap Server Configuration
# Copy this file to .env and update the values

# Server Settings
PORT=3000
NODE_ENV=development

# Enable/Disable Features
ENABLE_MCP=true
ENABLE_API=true
ENABLE_WEB=true

# Cache and Data Paths (relative to project root or absolute paths)
CACHE_DIR=./data/cache
DATA_DIR=./data/vulnerability-data

# API Keys
GITHUB_TOKEN=your_github_token_here
NVD_API_KEY=your_nvd_api_key_here
PREMIUM_API_KEY=your_premium_api_key_here

# Refresh Intervals (in milliseconds)
GITHUB_REFRESH_INTERVAL=86400000  # 24 hours
NVD_REFRESH_INTERVAL=86400000     # 24 hours
OSV_REFRESH_INTERVAL=86400000     # 24 hours

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000       # 10 minutes
RATE_LIMIT_MAX_REQUESTS=100       # 100 requests per window

# Database (if needed)
DB_URI=mongodb://localhost:27017/vulnzap

# Logging
LOG_LEVEL=info

# Subscription Tier Settings
DEFAULT_TIER=free

# Enabled Ecosystems (comma-separated list)
ENABLED_ECOSYSTEMS=npm,pip,go

# Concurrency Settings
MAX_CONCURRENT_SCANS=3
SCAN_TIMEOUT_MS=60000

# Supabase Settings
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Settings
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PRICE_ID_PRO=price_pro_id_here
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_id_here

# Next.js Settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here 