# VulnZap Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3456
HOST=localhost

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_key
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_price_id
STRIPE_PRODUCT_PRO=prod_your_pro_product_id
STRIPE_PRODUCT_ENTERPRISE=prod_your_enterprise_product_id

# API Configuration
API_BASE_URL=https://api.vulnzap.dev

# National Vulnerability Database (NVD) API Key
NVD_API_KEY=your-nvd-api-key

# GitHub API Key (for vulnerability database updates)
GITHUB_API_KEY=your-github-api-key

# Refresh Intervals (in milliseconds)
GITHUB_REFRESH_INTERVAL=86400000  # 24 hours
NVD_REFRESH_INTERVAL=86400000     # 24 hours

# Premium API Key (for development)
PREMIUM_API_KEY=your-development-premium-key

# Logging
LOG_LEVEL=info                   # debug, info, warn, error 